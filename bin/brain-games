#!/usr/bin/env php
<?php

$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',        // локальная разработка
    __DIR__ . '/../../../autoload.php',         // установленный пакет
];

foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        require_once $path;
        break;
    }
}

use function cli\line;
use function cli\prompt;

line('Welcome to the Brain Games!');
prompt('May I have your name?');
line('Hello, %s', $name);

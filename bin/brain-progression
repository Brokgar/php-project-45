#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function BrainGames\Cli\welcomeUser;
use function BrainGames\Engine\makeArray;

$name = welcomeUser();

echo "What number is missing in the progression?\n";

$rounds = 3;

for ($i = 0; $i < $rounds; $i++)
    {
    $array = makeArray();
    $answerIndex = rand(0, count($array) - 1);
    $correctAnswer = $array[$answerIndex];
    $array[$answerIndex] = "..";


    echo "Question: " . implode(" ", $array) . PHP_EOL;
    echo "Your answer: ";

    $answer = trim(fgets(STDIN));

    if ($answer !== (string)$correctAnswer) {
        echo "'{$answer}' is wrong answer ;(. Correct answer was '{$correctAnswer}'.\n";
        echo "Let's try again, {$name}!\n";
        exit;
    }

    echo "Correct!\n";
}

echo "Congratulations, {$name}!\n";